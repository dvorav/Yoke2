<div class="join-container">
    <header class="join-header">
        <h1>Y<i class="fas fa-egg"></i>KE</h1>
    </header>
    <main class="join-main">
        <form action="/chatroom">
            <div class="form-control">

                <input type="text" name="username" id="username" placeholder="Enter username..." required />
            </div>
            <div class="form-control">
                <label for="room">Select Room</label>
                <select name="room" id="room"></select>
            </div>
            <div>
                <label for="new-topic">Create New Topic</label>
                <input type="text" name="new-topic" id="new-topic" placeholder="Enter a topic" />
                <input type="button" id="add-topic" value="Insert" />
            </div>
            <button type="submit" class="btn" id="join-btn">Join Chat</button>
        </form>
    </main>
</div>
